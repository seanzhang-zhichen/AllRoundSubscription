# 生产环境配置文件
# 注意: 实际部署时需要设置真实的密钥和密码

# 数据库配置
POSTGRES_DB=content_aggregator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# 应用配置
SECRET_KEY=your_super_secret_key_here_change_in_production
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# 微信配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_SERVICE_APP_ID=your_service_app_id
WECHAT_SERVICE_APP_SECRET=your_service_app_secret

# Redis配置
REDIS_PASSWORD=your_redis_password

# 监控配置
GRAFANA_PASSWORD=your_grafana_password

# Sentry错误监控 (可选)
SENTRY_DSN=your_sentry_dsn_here

# 邮件配置 (用于告警)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL=admin@yourcompany.com

# SSL证书路径 (如果使用HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 备份配置
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key